# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_size = 4
indent_style = space

[*.{kt,kts}]
ktlint_disabled_rules = import-ordering
wildcard_import_limit = 99999
ij_kotlin_packages_to_use_import_on_demand = unset
ij_kotlin_name_count_to_use_star_import = 99999
ij_kotlin_name_count_to_use_star_import_for_members = 99999
ij_java_names_count_to_use_import_on_demand = 99999
max_line_length = 240
[{Jenkinsfile,*.yml,*.yaml,*.feature,*.avdl,*.conf}]
indent_size = 2
